{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "dist/ts/",
    "noEmit": false,
    "module": "Node16",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "Node16",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES5","ES6", "ES7"],
    "typeRoots": [
        "./src/@types"
    ]
  },
  "include": ["**/*.ts", "./*.js", "./*.mjs"],
  "typeAcquisition": {
    "enable": true
  }
}
